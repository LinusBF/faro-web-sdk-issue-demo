{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
  },
    "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
